<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 이용약관 -->

    <!-- 메타머스크 이용약관 동의 -->

    <!-- 개인정보 수집 및 이용 동의 -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_left_arrow"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="24dp" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/toolbar"
        android:background="#AEAEAE" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증 메일 발송이 완료되었습니다"
        android:layout_below="@+id/toolbar"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal= "true"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxx@gmail.com"
        android:layout_below="@+id/notice"
        android:textSize="16sp"
        android:layout_centerHorizontal= "true"
        />
    <TextView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일을 확인하시고 등록을 완료해주세요"
        android:layout_below="@+id/email"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"

        android:layout_centerHorizontal= "true"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일이 오지않으면 스팸함을 확인해주세요"
        android:layout_below="@+id/check"
        android:textSize="18sp"
        android:layout_marginStart="60dp"

        android:layout_centerHorizontal= "true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/check2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:hint="인증코드를 입력하세요"
        android:gravity="center"
        />





    <!-- 확인 버튼 -->

    <!-- 취소 버튼 -->
    <android.widget.Button
        android:background="@drawable/round_button"
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/email_edit"
        android:text="확인"
        android:textColor="#FFFFFF" />

    <android.widget.Button
        android:background="@drawable/round_button_gray"
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/email_edit"
        android:layout_alignParentLeft="true" />

</RelativeLayout>