<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/log_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/send_or_rec"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="보내기"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coin_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:text="1000.00000"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/coin_name"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="ETH" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/log_time"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="Mar 17"
                        android:layout_marginLeft="14dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/log_text"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="- 주소: " />

                    <TextView
                        android:id="@+id/log_address"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"
                        android:text="0x5a5...3f37" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AEAEAE"
        app:layout_constraintTop_toBottomOf="@+id/coin_layout2" />

</LinearLayout>
